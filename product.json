{
  "sections": {
    "main": {
      "type": "product-template",
      "settings": {
        "show_share_buttons": false,
        "show_vendor": false,
        "show_sku": false,
        "description_below_add_to_cart": false,
        "selector_mode": "dropdown",
        "show_color_swatch": false,
        "show_color_carousel": false,
        "show_quantity_selector": true,
        "show_inventory_quantity": false,
        "inventory_quantity_threshold": 0,
        "show_price_in_button": false,
        "show_payment_button": false,
        "show_section": true,
        "bg": "",
        "video": "{{ product.metafields.my_fields[\"1st\"].value }}",
        "image_size": "small",
        "stack_images": false,
        "show_thumbnails": true,
        "enable_image_zoom": false,
        "tab_page_1_handle": "",
        "tab_page_2_handle": "",
        "reviews_enabled": false,
        "featured_image_size": "large"
      }
    },
    "recommendations": {
      "type": "product-recommendations",
      "settings": {
        "show_product_recommendations": true,
        "heading": "You may also like",
        "show_product_info": true,
        "show_vendor": false,
        "show_color_swatch": false
      }
    },
    "recently-viewed": {
      "type": "recently-viewed-products",
      "settings": {
        "show_section": true,
        "title": "Recently viewed",
        "show_product_info": true,
        "show_vendor": false,
        "show_color_swatch": false
      }
    }
  },
  "order": [
    "main",
    "recommendations",
    "recently-viewed"
  ]
}
